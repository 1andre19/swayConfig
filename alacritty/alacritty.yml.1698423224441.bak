#Font Config
font:
  normal:
    family: "Space Mono Nerd Font"
    style: regular
  bold:
    family: "Space Mono Nerd Font"
    style: bold
  italic:
    family: "Space Mono Nerd Font"
    style: italic

  size: 18
draw_bold_text_with_bright_colors: true

# Window Config
window:
  opacity: 0.93
  padding:
    x: 4
    y: 4
  dynamic_padding: true
colors:
  # Default colors
  primary:
    background: '#202734'
    foreground: '#CBCCC6'

  # Normal colors
  normal:
    black: '#191E2A'
    red: '#FF3333'
    green: '#BAE67E'
    yellow: '#FFA759'
    blue: '#73D0FF'
    magenta: '#FFD580'
    cyan: '#95E6CB'
    white: '#C7C7C7'

  # Bright colors
  bright:
    black: '#686868'
    red: '#F27983'
    green: '#A6CC70'
    yellow: '#FFCC66'
    blue: '#5CCFE6'
    magenta: '#FFEE99'
    cyan: '#95E6CB'
    white: '#FFFFFF'
theme: Ayu-Mirage

